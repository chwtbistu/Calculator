<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">
        <TextView
            android:id="@+id/tv_toolbar"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/change"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:text="change"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#808080"
        android:textSize="20sp"
        android:gravity="center_vertical|end"
        />
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@null"
        android:focusable="false"
        android:gravity="center_vertical|end"
        android:textColor="#000000"
        android:hint="@string/hint"
        android:inputType="number"
        android:textSize="25sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="404dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/mihanshu"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="1"
            android:layout_row="0"
            android:text="x^y"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/sin"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="2"
            android:layout_row="0"
            android:text="sin"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/cos"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="3"
            android:layout_row="0"
            android:text="cos"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tan"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="4"
            android:layout_row="0"
            android:text="tan"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/log"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="1"
            android:layout_row="1"
            android:text="log"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/mod"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Mod"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/genhao"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="0"
            android:layout_row="1"
            android:text="√" />


        <Button
            android:id="@+id/kaifang"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="4"
            android:layout_row="1"
            android:text="y√x"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/lifang"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="3"
            android:layout_row="1"
            android:text="x³"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/squ"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="0"
            android:layout_row="0"
            android:text="x²"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/qudao"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="4"
            android:layout_row="2"
            android:text="1/x"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/ce"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="1"
            android:layout_row="3"
            android:text="CE" />

        <Button
            android:id="@+id/clear"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="2"
            android:layout_row="3"
            android:text="C" />

        <Button
            android:id="@+id/delete"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="3"
            android:layout_row="3"
            android:text="DEL" />

        <Button
            android:id="@+id/div"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="4"
            android:layout_row="3"
            android:text="÷" />

        <Button
            android:id="@+id/num_seven"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_num"
            android:layout_column="1"
            android:layout_row="4"
            android:text="7" />

        <Button
            android:id="@+id/num_eight"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_num"
            android:layout_column="2"
            android:layout_row="4"
            android:text="8" />

        <Button
            android:id="@+id/num_nine"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_num"
            android:layout_column="3"
            android:layout_row="4"
            android:text="9" />

        <Button
            android:id="@+id/multi"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="4"
            android:layout_row="4"
            android:text="×" />

        <Button
            android:id="@+id/num_four"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_num"
            android:layout_column="1"
            android:layout_row="5"
            android:text="4" />

        <Button
            android:id="@+id/num_five"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_num"
            android:layout_column="2"
            android:layout_row="5"
            android:text="5" />

        <Button
            android:id="@+id/num_six"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_num"
            android:layout_column="3"
            android:layout_row="5"
            android:text="6" />

        <Button
            android:id="@+id/jiecheng"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="0"
            android:layout_row="5"
            android:text="n!"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/pie"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="0"
            android:layout_row="4"
            android:text="π"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/ln"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="0"
            android:layout_row="3"
            android:text="ln"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/sinf"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="0"
            android:layout_row="2"
            android:text="sin-1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/cosf"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="1"
            android:layout_row="2"
            android:text="cos-1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/tanf"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="2"
            android:layout_row="2"
            android:text="tan-1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/e"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="3"
            android:layout_row="2"
            android:text="e^x"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/kuohao_l"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="0"
            android:layout_row="7"
            android:text="("
            android:textAllCaps="false" />

        <Button
            android:id="@+id/kuohao_r"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="1"
            android:layout_row="7"
            android:text=")"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/sub"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="4"
            android:layout_row="5"
            android:text="－" />

        <Button
            android:id="@+id/num_one"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_num"
            android:layout_column="1"
            android:layout_row="6"
            android:text="1" />

        <Button
            android:id="@+id/num_two"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_num"
            android:layout_column="2"
            android:layout_row="6"
            android:text="2" />

        <Button
            android:id="@+id/num_three"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_num"
            android:layout_column="3"
            android:layout_row="6"
            android:text="3" />

        <Button
            android:id="@+id/add"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="4"
            android:layout_row="6"
            android:text="＋" />

        <Button
            android:id="@+id/qufu"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="0"
            android:layout_row="6"
            android:text="±" />

        <Button
            android:id="@+id/num_zero"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_num"
            android:layout_column="2"
            android:layout_row="7"
            android:text="0" />

        <Button
            android:id="@+id/point"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="3"
            android:layout_row="7"
            android:text="." />

        <Button
            android:id="@+id/equal"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_com"
            android:layout_column="4"
            android:layout_row="7"
            android:text="＝" />
    </GridLayout>

</LinearLayout>